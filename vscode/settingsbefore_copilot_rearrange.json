{
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
  },
  "[javascriptreact]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "[ruby]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    "editor.formatOnSave": false
  }
  "editor.formatOnPaste": false,
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "eslint.run": "onSave",
  "eslint.alwaysShowStatus": true,
  "extensions.autoUpdate": false,
  "eslint.enable": true,
  "prettier.arrowParens": "always",
  "prettier.jsxSingleQuote": false,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 120,
  "prettier-eslint.eslintIntegration": true,
  "files.trimTrailingWhitespace": true,
  "editor.detectIndentation": false,
  // Defining custom colors instead of default "Rainbow" for dark backgrounds.
  // (Sorry: Changing them needs an editor restart for now!)
  "indentRainbow.colors": [
    "rgba(255,255,64,0.2)",
    "rgba(127,255,127,0.2)",
    "rgba(255,127,255,0.2)",
    "rgba(79,236,236,0.2)"
  ],
  "terminal.integrated.fontFamily": "Menlo",
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#b52e31"
    },
    {
      "name": "Auth0 Orange",
      "value": "#eb5424"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "C# Purple",
      "value": "#68217A"
    },
    {
      "name": "Gatsby Purple",
      "value": "#639"
    },
    {
      "name": "Go Cyan",
      "value": "#5dc9e2"
    },
    {
      "name": "Java Blue-Gray",
      "value": "#557c9b"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#00b3e6"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],
  "peacock.surpriseMeOnStartup": true,
  "explorer.confirmDragAndDrop": false,
  "emmet.triggerExpansionOnTab": true,
  "editor.accessibilitySupport": "off",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1",
    "Q_NEW_SESSION": "1"
  },
  "workbench.colorTheme": "Atom One Light",
  "html.format.templating": true,
  "editor.fontLigatures": false,
  "editor.fontFamily": "Menlo, Courier New",
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  },
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.sideBar.location": "left",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/public": true
  },
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "files.associations": {
    "*.axlsx": "ruby",
    "*.jbuilder": "ruby"
  },
  "gitlens.keymap": "chorded",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
  },
  "workbench.startupEditor": "newUntitledFile",
  "gitlens.currentLine.scrollable": false,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "files.hotExit": "onExitAndWindowClose",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "eslint.format.enable": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "editor.fontSize": 12,
  "html.format.maxPreserveNewLines": 1,
  "git.mergeEditor": false,
  "security.workspace.trust.untrustedFiles": "open",
  "window.zoomLevel": 1,
  "[xml]": {
    "editor.defaultFormatter": "mikeburgh.xml-format"
  },
  "http.proxyAuthorization": null,
  "diffEditor.ignoreTrimWhitespace": false,
  "eslint.codeActionsOnSave.rules": null,
  "files.autoSaveWhenNoErrors": true,
}
