  "peacock.surpriseMeOnStartup": true,
  "explorer.confirmDragAndDrop": false,
  "todo-tree.tree.showScanModeButton": false,
  "rubyTestExplorer.testFramework": "rspec",
  "files.trimTrailingWhitespace": true,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "yaml.schemas": {
    "file:///Users/john.coote/.vscode/extensions/atlassian.atlascode-2.8.6/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  "redhat.telemetry.enabled": true,
  "mssql.connections": [
    {
      "server": "{{put-server-name-here}}",
      "database": "{{put-database-name-here}}",
      "user": "{{put-username-here}}",
      "password": "{{put-password-here}}"
    }
  ],
  "ruby.useBundler": true,
  // "ruby.format": false,
  "ruby.format": "rubocop",

  "emmet.triggerExpansionOnTab": true,
  "git.mergeEditor": false,
  "workbench.iconTheme": "vscode-icons",
  "editor.accessibilitySupport": "off",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1",
    "Q_NEW_SESSION": "1"
  },
  "workbench.colorTheme": "Atom One Light",
  "html.format.templating": true,
  "editor.fontLigatures": false,
  "editor.fontFamily": "Menlo, Courier New",
  "ruby.languageServer": {},
  "ruby.useLanguageServer": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  },
  "vsicons.dontShowNewVersionMessage": true,
  "editor.wordWrap": "on"
}